<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.EditNoteFragment"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0dp"
                app:cardBackgroundColor="@color/white"
                app:elevation="0dp">

                <LinearLayout
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:id="@+id/note_title"
                        android:background="@null"
                        android:hint="输入标题..."
                        android:textSize="25sp"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <LinearLayout
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/note_content"
                    android:gravity="top"
                    android:background="@null"
                    android:minHeight="500dp"
                    android:hint="输入便签内容"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="20dp"
    app:cardCornerRadius="0dp"
    android:id="@+id/bottom_bar">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/insert_title"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/round_title_24"/>

                <ImageButton
                    android:id="@+id/insert_quote"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/round_format_quote_24"/>

                <ImageButton
                    android:id="@+id/insert_photo"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/round_photo_24"/>

                <ImageButton
                    android:id="@+id/insert_link"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/round_insert_link_24"/>

                <ImageButton
                    android:id="@+id/insert_code"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/round_code_24"/>

                <ImageButton
                    android:id="@+id/insert_ulist"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/round_list_24"/>

                <ImageButton
                    android:id="@+id/insert_checkbox"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/round_check_box_24"/>

                <ImageButton
                    android:id="@+id/insert_italic"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/round_format_italic_24"/>

                <ImageButton
                    android:id="@+id/insert_bold"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/round_format_bold_24"/>

                <ImageButton
                    android:id="@+id/insert_strikethrough"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/round_format_strikethrough_24"/>

                <!--<TextView-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="45dp"-->
                    <!--android:layout_weight="1"-->
                    <!--android:gravity="center"-->
                    <!--android:textSize="16sp"-->
                    <!--android:textColor="#ffffff"-->
                    <!--android:text="快速选择"/>-->


            </LinearLayout>
        </HorizontalScrollView>

    </android.support.v7.widget.CardView>

</LinearLayout>